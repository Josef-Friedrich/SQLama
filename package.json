{
  "name": "sqlama",
  "version": "0.1.0",
  "scripts": {
    "deploy": "rsync -av --delete ./dist/ netcup:/var/www/sqlama/",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "parser": "npx peggy --format es ./src/sql-parser/pegjs/florajs.pegjs && npx peggy --format es ./src/sql-parser/pegjs/joe-re.pegjs && npx peggy --format es ./src/sql-parser/pegjs/parboiled-experiments.pegjs",
    "update": "ncu",
    "upgrade": "ncu -u"
  },
  "type": "module",
  "dependencies": {
    "@types/sql.js": "^1.4.9",
    "monaco-editor": "^0.53.0",
    "pinia": "^3.0.3",
    "sql.js": "^1.13.0",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@babel/types": "^7.28.4",
    "@playwright/test": "^1.54.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@rushstack/eslint-patch": "^1.12.0",
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "cypress": "^15.2.0",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "^10.4.0",
    "eslint": "^9.35.0",
    "jiti": "^2.4.2",
    "jsdom": "^27.0.0",
    "npm-check-updates": "^18.1.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "peggy": "^5.0.6",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.1.0",
    "typescript": "~5.9.2",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.7"
  }
}
